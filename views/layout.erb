<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Libanon Wiki</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  <div class="lines">
    <div></div>
  </div>
    <header class="site_header">
      <div class="logo">
        <img class="site_logo" src="./img/lebanon.png" alt="Lebanon">
      </div>
      <% unless @user %>
        <a href="/login" class="mdl-button mdl-js-button mdl-button--raised action-button-login">
          Login
        </a>
        <a href="/signup" class="mdl-button mdl-js-button mdl-button--raised action-button-signup">
          Sign up
        </a>
      <% end %>
      <div id="navbar">
        <ul>
          <li class="navigation"><a href='/'><span>Start</span></a></li>
          <li class="navigation"><a href='/food'><span>Food</span></a></li>
          <li class="navigation"><a href='/attractions'><span>Attractions</span></a></li>
          <li class="navigation"><a href='/map'><span>Map</span></a></li>
          <li class="navigation"><a href='/contact'><span>Contact</span></a></li>
        </ul>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
    <footer>
      <nav>
        <span>copyright &copy; libanonwiki.se 2016</span>
      </nav>
    </footer>
  </body>
</html>